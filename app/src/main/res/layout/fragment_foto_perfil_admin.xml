<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.administrador.FotoPerfilAdmin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TextViewFotoPerfil"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/foto_de_perfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgFotoDePerfil"
            android:layout_width="132dp"
            android:layout_height="151dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/s_una_imatge_on_surt_una_silueta_de_persona"
            android:src="@drawable/foto_perfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextViewFotoPerfil" />

        <ImageButton
            android:id="@+id/img_Button_buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/lupa_per_buscar"
            android:src="@android:drawable/ic_menu_upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgFotoDePerfil"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck,DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/btn_guardar"
            style="@style/Widget.ComunicaProdis.ButtonFotoDePerfil_guardar"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:text="@string/guardar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_Button_buscar"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btnCancelarfotoPerfil"
            style="@style/Widget.ComunicaProdis.ButtonCancel"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toEndOf="@+id/btn_guardar"
            app:layout_constraintTop_toBottomOf="@+id/img_Button_buscar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>