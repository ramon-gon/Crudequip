    <style name="Widget.ComunicaProdis.ButtonFotoDePerfil_guardar" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">60dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
    <style name="Widget.ComunicaProdis.ButtonFotoDePerfil_cancelar" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">60dp</item>
        <item name="android:textSize">30dp</item>
