<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KingsLeague" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">#FF5722</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.KingsLeague.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KingsLeague.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    //Themes
    <style name="Widget.ComunicaProdis.TextViewTherme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="Widget.ComunicaProdis.buttonTherme" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <!--<item name="android:backgroundTint">@color/purple_200</item>-->
    </style>
    <style name="constraintlayoutTherme">
        <item name="android:padding">20dp</item>
        <!--<item name="android:backgroundTint">@color/purple_200</item>-->
    </style>
    <style name="Widget.ComunicaProdis.textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>


    <style name="Widget.ComunicaProdis.TextSize_titol" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30sp</item>
    </style>


</resources>